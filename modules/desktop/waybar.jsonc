// -*- mode: jsonc -*-
{
	"reload_style_on_change": false,
	"layer": "top",
	"position": "bottom",
	"spacing": 4,
	"modules-left": [
		"niri/window",
	],
	"modules-center": [
		"mpris",
	],
	"modules-right": [
		"pulseaudio",
		"power-profiles-daemon",
		"cpu",
		"battery",
		// "tray",
		"clock",
		"custom/power"
	],
	"niri/window": {
		"rewrite": {
			"^(.*) — Mozilla Firefox$": "<span foreground=\"#E66000\">󰈹</span> $1"
		},
	},
	"mpris": {
		"format": "{player_icon} {dynamic}",
		"format-paused": " ",
		"dynamic-order": ["title", "artist"],
		"tooltip-format": "",
		"on-click": "niri msg action focus-workspace Music",
		"on-click-middle": "",
		"on-click-right": "",
		"player-icons": {
			"default": "▶",
			"spotify": "<span foreground=\"#1ED760\"></span>"
		},
		"status-icons": {
			"paused": "⏸"
		},
	},
	"pulseaudio": {
		"scroll-step": 2, // %, can be a float
		"format": "{volume}% {icon}",
		"format-bluetooth": "{volume}% {icon} ",
		"format-bluetooth-muted": "{volume}%  ",
		"format-muted": "{volume}% ",
		"format-source": "",
		"format-source-muted": "",
		"format-icons": {
			"headphone": "",
			"hands-free": "?",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": ["", ""]
		},
		"on-click": "GSK_RENDERER=cairo GTK_USE_PORTAL=0 mixxc --anchor bottom --anchor right --margin 5 --margin 180 -i -P"
	},
	"power-profiles-daemon": {
		"format": "{icon}",
		"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
		"tooltip": true,
		"format-icons": {
			"default": "",
			"performance": "",
			"balanced": "",
			"power-saver": ""
		}
	},
	"cpu": {
		"format": " {usage}%",
		"interval": 1
	},
	"battery": {
		"states": {
			"critical": 15
		},
		"format": "{capacity}% {icon}",
		"format-full": "{capacity}% {icon}",
		"format-charging": "{capacity}% <span foreground=\"#56ff4a\">󰂄</span>",
		"format-plugged": "{capacity}% <span foreground=\"#008cff\"></span>",
		"format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
		// "format-icons": ["", "", "", "", ""],
		"interval": 1
	},
	// TODO
	"tray": {
		// "icon-size": 21,
		"spacing": 10,
	},
	"clock": {
		"format": "󰃭 {:%b %d  %H:%M:%S}",
		"interval": 1,
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
	},
	"custom/power": {
		"format" : "⏻ ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "@POWER_MENU@",
		"menu-actions": {
			"suspend": "systemctl suspend",
			"reboot": "reboot",
			"shutdown": "shutdown 0",
		}
	}
}
